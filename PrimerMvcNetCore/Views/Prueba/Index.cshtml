@*
    Comentarios en razor
*@
DECLARACIÓN DE VARIABLES A NIVEL DE PÁGINA
@{
    //ESTO ES CÓDIGO C#
    int valor = 14;
    string texto = "hoy es lunes";
    valor += 1;
    texto += " y mañana martes";
    texto = texto.ToUpper();
}
DIBUJAR VARIABLES
<h2 style="color:red">
    Texto: @texto, Número: @valor
</h2>

CÓDIGO LÓGICO CON HTML 
@if(valor > 0){
    //CÓDIGO C#
    texto = "POSITIVO";
    <h3 style="color:lawngreen">@texto</h3>
}else{
    //CÓDIGO C#
    texto = "NEGATIVO";
    <h3 style="color:red">@texto</h3>
}